<%=render 'shared/page_title' , title: 'Log in' %>

<div class="row">
    <div class="col-md-6 well col-md-offset-3">
        <%= form_tag '/login' do %>
            <%= label_tag :email , "ایمیل" %>
            <%= text_field_tag :email %>
            <%= label_tag :password , 'پسورد' %>
            <%= password_field_tag :password %>
            <%= submit_tag 'log in' , class: 'btn btn-success' %>
        <% end %>
    </div>
</div>